<% layout('layouts/boilerplate.ejs')%>
    <style>
        body{
            background: white;
        }
    </style>
	<div class="container">
        <div class="row p-5">
            <div class="col-3"></div>
            <div class="col-5 justify-content-center ">
                <h3>Are you sure, you want to delete this blog?</h3>
                <form method="POST" action="/delete/<%=id%>">
                    <button class="btn btn-danger btn-block mt-3">Yes</button>
                </form>
                <button class="btn btn-secondary btn-block mt-3" onclick="history.back()">No</button>
            </div>
        </div>
	</div>
	