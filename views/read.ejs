<% layout('layouts/boilerplate.ejs')%>
    
    <style>
        .heading{
            color : white
        }
    </style>

    <div class="container mt-3 pt-2">
        <h2 class = "heading">Blogs By The Community.........</h2>
        <% (PageData.blogs).forEach(function(blog) {%>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10 p-3">
                    <div class="card">
                        <div class="card-body">
                          <h3 class="card-title"><%=blog.title%></h3>
                          <h5 class="card-text"><i>Posted by <%=blog.author%> on <%=blog.createdAt.toDateString()%></i></h5>
                          <a href="/view/<%=blog._id%>" class="btn btn-primary">open</a>
                        </div>
                    </div>
                </div>
            </div>
        <% })%>
        <div class="d-flex">
            <div class="mr-auto">
                <% if(PageData.currentPage > 0) {%>
                    <a href="/read?page=<%=PageData.currentPage - 1%>" class="btn btn-primary m-2 p-2">Prev</a>
                <% } %>
            </div>
            
            <div class="">
                <% if(PageData.currentPage + 1 < PageData.totalPages) { %>
                    <a href="/read?page=<%=PageData.currentPage + 1%>" class="btn btn-primary m-2 p-2">Next</a>
                <% } %>
            </div>
            
        </div>

    </div>
