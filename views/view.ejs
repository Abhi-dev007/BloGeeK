<% layout('layouts/boilerplate.ejs')%>

    <style>
        body{
            color : black;
            background-image : url('../images/background.jpg');
        }
        img{
            width: 100%;
            height: 450px;
        }
    </style>    

	<div class="container">
        <div class="row p-5">
            <div class="col-2"></div>
            <div class="col-8 m-3 p-3 justify-content-center ">
                
                <h1><b><%=Blog.title%></b></h1>
                <h5 class="p-2"><i>Posted by <%=Blog.author%> on <%=Blog.createdAt.toDateString()%></i></h5>
                <% if(Blog.image.link) {%>
                    <img src="<%=Blog.image.link%>">
                    <p class="p-2 d-flex justify-content-center"><%=Blog.image.caption%></p>
                <% } %>
                <h4 class="mt-5"><%=Blog.body%></h4>

            </div>
        </div>
	</div>
	

