<% layout('layouts/boilerplate')%>

    <div class="container d-flex justify-content-center align-items-center mt-5 pt-3">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="images/blogeek.jpg"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Verify Account</h5>
                        <form action="/verifyAccount" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label">Enter the security key that has been Sent to your email address.</label>
                                <input class="form-control" type="text" id="username" name="secKey" required autofocus>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            
                            <button class="btn btn-success btn-block">Verify</button>
                        </form>
    
                    </div>
                </div>
            </div>
        </div>
    </div>
